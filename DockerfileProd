FROM registry.cn-shenzhen.aliyuncs.com/yxw-docker/node10.15.3:latest
MAINTAINER yuxuewen <8586826@qq.com>

RUN mkdir /opt/app

COPY . /opt/app

RUN rm -rf /opt/app/node_modules


WORKDIR /opt/app

RUN yarn install

ENV acm_endpoint='' \
    acm_namespace='' \
    acm_accessKey='' \
    acm_secretKey='' \
    acm_requestTimeout=6000 \
    acm_dataId='prod-egg-okex-server' \
    acm_group='DEFAULT_GROUP'

EXPOSE 9300

CMD  ["/bin/sh", "-c", "yarn rbn-start-prod"]